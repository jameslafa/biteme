{
  "name": "biteme",
  "version": "1.0.0",
  "description": "A simple, open-source vegetarian/vegan recipe app with an elegant minimalist design.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "playwright test",
    "test-parser": "~/.cargo/bin/cargo test --manifest-path recipe-parser/Cargo.toml",
    "test:all": "npm run test-parser && npm test",
    "parse-recipes": "~/.cargo/bin/cargo run --manifest-path recipe-parser/Cargo.toml --release",
    "lint-recipes": "~/.cargo/bin/cargo run --manifest-path recipe-parser/Cargo.toml --release -- --lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jameslafa/biteme.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jameslafa/biteme/issues"
  },
  "homepage": "https://github.com/jameslafa/biteme#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.2"
  }
}
